<nav data-topbar data-options="is_hover: false" class="top-bar" >
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Tutask", root_path %></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href=""><span>Menu</span></a></li>
  </ul>


  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <% if user_signed_in? %>
      <ul class="left">
        <li><%= link_to "My Projects", projects_path %></li>
      </ul>
    <% end %>
    
    <ul class="right">
      <li><a href="#">Help</a></li>
      <li><a href="#">FAQ</a></li>
      <% if user_signed_in? %>
        <li class="has-dropdown">
          <a href="#">
            <%= image_tag "http://www.gravatar.com/avatar/#{current_user.email}", class: "avatar" %>
            <%= current_user.email %>
          </a>
          <ul class="dropdown">
            <li><%= link_to "Settings", new_user_password_path %></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "Sign in", new_user_session_path %></li>
        <li><%= link_to "Sign up", new_user_registration_path %></li>
      <% end %>
    </ul>
</nav>